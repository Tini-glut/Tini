<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.AppCompat.DayNight"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="@dimen/card_elevation"
    android:layout_margin="@dimen/margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/avatar"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/image_avatar"
            android:layout_height="@dimen/image_avatar"
            android:layout_margin="@dimen/margin"
            android:src="@mipmap/logo"/>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_avatar"
            android:layout_margin="@dimen/margin"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/list_label_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/input_label"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_margin="@dimen/margin"
                tools:text="Admin" />
            <TextView
                android:id="@+id/list_label_username_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin"
                tools:text="2019-2-4"
                android:textColor="?android:attr/textColorSecondary"
                />




        </LinearLayout>
        <TextView
            android:id="@+id/timesamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/divider"
            tools:text="17:47"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin"
            />

        <TextView
            android:id="@+id/unreadCount"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/avatar"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin"
            android:background="@drawable/layout_count_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>