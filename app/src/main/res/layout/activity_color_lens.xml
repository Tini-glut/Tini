            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="48dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
